<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context=".sets.QuestionActivity">

    <TextView
        android:id="@+id/txtTotalQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question: 1/10"
        android:textSize="22sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="Score: 0"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18sp"
            />


        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="194dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingEnd="10dp"
            android:text="00:30"
            android:textAlignment="textEnd"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#123"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtQuetsionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#F8F6F6"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical"

            android:textAlignment="center"
            android:paddingTop="20dp"
            android:padding="5dp"
            android:text="eng quiz is best place to learn app development ?" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/raido_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/radio_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:layout_marginTop="5dp"
                android:freezesText="true"
                android:text="OS"
                android:padding="1dp"
                android:background="@drawable/default_option_a"
                android:textSize="20sp"
                android:textColor="#000"
                android:paddingStart="70dp"
                />

            <RadioButton
                android:id="@+id/radio_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:layout_marginTop="5dp"
                android:freezesText="true"
                android:text="Operating System"
                android:padding="1dp"
                android:background="@drawable/default_option_b"
                android:textSize="20sp"
                android:textColor="#000"
                android:paddingStart="70dp"
                />

            <RadioButton
                android:id="@+id/radio_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/default_option_c"
                android:button="@null"
                android:freezesText="true"
                android:text="Browser"
                android:textSize="20sp"
                android:textColor="#000"
                android:paddingStart="70dp"
                />

            <RadioButton
                android:id="@+id/radio_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/default_option_d"
                android:button="@null"
                android:freezesText="true"
                android:padding="1dp"
                android:text="Random Access Memory"
                android:paddingStart="70dp"
                android:textColor="#000"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_Next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/submit_bt_background"
            android:text="Next"
            android:textAllCaps="false"
            android:textSize="22sp"
            android:padding="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>